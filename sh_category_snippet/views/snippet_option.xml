<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sh_category_snippet_website_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//div" position="after">
            <div data-selector="#sh_category_snippet_section_1,#sh_category_snippet_section_2,
                #sh_category_snippet_section_3,#sh_category_snippet_section_4,
                #sh_category_snippet_section_5,#sh_category_snippet_section_6,
                #sh_category_snippet_section_7,#sh_category_snippet_section_8,
                #sh_category_snippet_section_10,#sh_category_snippet_section_11,
                #sh_category_snippet_section_13,#sh_category_snippet_section_14,
                #sh_category_snippet_section_15,#sh_category_snippet_section_16,
                #sh_category_snippet_section_17,#sh_category_snippet_section_18,
                #sh_category_snippet_section_20,#sh_category_snippet_section_21,
                #sh_category_snippet_section_22,#sh_category_snippet_section_23,
                #sh_category_snippet_section_24,#sh_category_snippet_section_25">
                <t t-set="sh_categ_snipp_categories" t-value="request.env['product.public.category'].search([])" />
                <t t-if="len(sh_categ_snipp_categories)">
                    <t t-foreach="sh_categ_snipp_categories" t-as="categ">
                        <t t-set="sh_categ_snipp_data_cls" t-value="'sh_categ_snipp_' + str(categ.id) + '_cend'" />
                        <we-checkbox t-att-string="categ.name" t-att-data-select-class="sh_categ_snipp_data_cls" />
                    </t>
                </t>

                <we-select string="Order by" data-attribute-name="data-order">
                    <we-button data-select-attribute="">default</we-button>
                    <we-button data-select-attribute="name asc">name (A-Z)</we-button>
                    <we-button data-select-attribute="name desc">name (Z-A)</we-button>
                    <we-button data-select-attribute="create_date asc">Create Date asc</we-button>
                    <we-button data-select-attribute="create_date desc">Create Date desc</we-button>
                    <we-button data-select-attribute="sequence asc">Sequence asc</we-button>
                    <we-button data-select-attribute="sequence desc">Sequence desc</we-button>
                </we-select>

                <we-checkbox string="Description" data-select-data-attribute="true" data-attribute-name="displayDescription" />
                <we-checkbox string="Image" data-select-data-attribute="true" data-attribute-name="displayImage" />
                <we-checkbox string="Product Count" data-select-data-attribute="true" data-attribute-name="displayProductCount" />
            </div>
        </xpath>
    </template>
</odoo>
